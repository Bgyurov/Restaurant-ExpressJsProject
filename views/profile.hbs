  <main id="profile">
        <section id="profile-info">
            <div class="profile-image">
                <img src="/images/profileImg.png">
            </div>

            <div class="profile-info">
                <div class="profile-text">
                    <h1 id="name">{{mealReview.name}}</h1>
                    <h3 id="platform">Your profile</h3>
                    <p id="price"><span>Price: ${{mealReview.price}}</span></p>
                    <p id="genre"><span>Weight: {{mealReview.weight}}gr</span></p>
                    <p id="description">Your orders:{{mealReview.description}}</p>
                    <p id="description">Orders of this meal:{{mealReview.orderList.length}}</p>

                </div>
                    
                <div class="product-btn">
                   <div class="author">
                        <a href="/edit/{{mealReview._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{mealReview._id}}" class="btn-delete">Delete</a>
                    </div>

                    <!-- Logged in user who has already buy this game code-->
                 
                </div>
           
            </div>
        </section>
    </main>
