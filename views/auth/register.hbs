

    <body class="register-custom-image bg-cover bg-center overflow-y-auto min-h-screen" id="register">
      
           {{#if error}}
<div class="max-w-lg mx-auto">
        <div class="error-container bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
            <p>{{error}}</p>
        </div>
    </div>
        {{/if}}
        
    <div class="max-w-lg mx-auto">
  <div class="register-box bg-gray-200 rounded-lg p-8 mt-5">
    <div class="bg-gray-300 text-center border-double border-4 border-sky-500  rounded-lg z-10">
    <h1 class="text-2xl text-white font-bold mb-4">Register</h1>
    <h4 class="text-sm text-white mb-6">It's free and only takes a minute</h4>

    </div>
    <form method="POST" class=" space-y-4">
      <div>
        <label for="profileImage" class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Profile Image</label>
        <input type="text" id="profileImage" name="profileImage" placeholder="https://..." class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
      </div>
      <div>
        <label for="username" class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Username</label>
        <input type="text" id="username" name="username" placeholder="Username.." class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
      </div>
      <div>
        <label for="email" class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Email</label>
        <input type="text" id="email" name="email" placeholder="Email.." class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
      </div>
      <div>
        <label for="password" class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Password</label>
        <input type="password" id="password" name="password" placeholder="Password.." class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
      </div>
      <div>
        <label for="repeatPassword" class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Confirm Password</label>
        <input type="password" id="repeatPassword" name="repeatPassword" placeholder="Confirm Password.." class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
      </div>
      <div class="flex justify-center">
      <button type="submit" class="bg-[#374151] text-[#fef3c7] justify-center  font-bold py-2 px-4 rounded shadow-white transition-all duration-100 delay-100 hover:text-[#ddd6fe] hover:shadow-lg">Register</button>
      </div>
    </form>
    <p class="mt-4 text-center text-sm">Already have an account? <a href="/login" class="text-gray-700 font-bold  transition-all duration-100 delay-100 hover:text-gray-600">Login here</a></p>
  </div>
</div>

    </body>

