<body class="contact-custom-image bg-cover bg-center overflow-y-auto min-h-screen" id="login">


    {{#if error}}
    <div id="errorContainer" class="max-w-lg mx-auto">
        <div class=" bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
            <div class="flex items-center">
                <div class="mr-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-500" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-1a7 7 0 100-14 7 7 0 000 14zM10 9a1 1 0 011 1v3a1 1 0 01-2 0V10a1 1 0 011-1zm0-4a1 1 0 011 1v1a1 1 0 01-2 0V6a1 1 0 011-1z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <p>{{error}}</p>
            </div>
        </div>
    </div>
    {{/if}}
    <div class="max-w-lg mx-auto">
        <div class="login bg-gray-200 rounded-lg p-8 mt-5">
            <div class="bg-gray-300 text-center border-double border-4 border-sky-500  rounded-lg z-10">
                <h1 class="text-2xl text-white font-bold mb-4">Login</h1>
                <h4 class="text-sm text-white mb-6">Enter your credentials to access your account.</h4>

            </div>
            <form method="POST" class=" space-y-4">
                <form class="space-y-4" method="POST">
                    <div>

                        <label
                            class="block text-sm text-center mt-5  text-gray-700 font-bold font-medium text-gray-700">Email</label>
                        <input
                            class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"
                            type="text" name="email" placeholder="Email..">
                    </div>
                    <div>
                        <label
                            class="block text-sm text-center  text-gray-700 font-bold font-medium text-gray-700">Password</label>
                        <input
                            class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"
                            type="password" name="password" placeholder="Password..">
                    </div>
                    <div class="flex justify-center">

                        <input
                            class="bg-[#374151] text-[#fef3c7] justify-center  font-bold py-2 px-4 rounded shadow-white transition-all duration-100 delay-100 hover:text-[#ddd6fe] hover:shadow-lg"
                            type="submit" value="Login">
                    </div>
                </form>
                <p class="mt-4 text-center text-sm">Don't have an account? <a
                        class="text-gray-700 font-bold  transition-all duration-100 delay-100 hover:text-gray-600"
                        href="/register">Register here</a></p>

                <script>
                        const errorContainer = document.getElementById('errorContainer')

                        setTimeout(() => {
                            errorContainer.style.display = 'none';
                        }, 5000);
        
                </script>
</body>