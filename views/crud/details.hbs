

    <main id="details">
        <section id="details-info">
            <div class="game-image">
                <img src="{{mealReview.image}}">
            </div>

            <div class="game-info">
                <div class="game-text">
                    <h1 id="name">{{mealReview.name}}</h1>
                    <h3 id="platform">Type: {{mealReview.type}}</h3>
                    <p id="price"><span>Price: ${{mealReview.price}}</span></p>
                    <p id="genre"><span>Weight: {{mealReview.weight}}gr</span></p>
                    <p id="description">Description:{{mealReview.description}}</p>
                    <p id="description">Orders of this meal:{{mealReview.orderList.length}}</p>

                </div>
                    
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isAuthenticated}}
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/edit/{{mealReview._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{mealReview._id}}" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if isOrdered}}
                    
                     <p class="buy-message">You have already order this!</p> 
                    {{else}}
                    <a href="/order/{{mealReview._id}}" class="btn-buy">Order</a> 
                    {{/if}}
                    {{/if}}
                    {{/if}}

                


                    <!-- Logged in user who has already buy this game code-->
                 
                </div>
           
            </div>
        </section>
    </main>

    