

    <main id="edit">
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
        {{#if error}}
         <div>
            <div class="errorContainer">
                <p>{{error}}</p>
            </div>
        </div> 
        {{/if}}
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Meal</h1>
                <form  method="POST">
                    <label>Type:</label>
                    <select id="type" name="type">
                         {{!-- {{#each platforms}}
                        <option value="{{label}}"{{#if isSelected}}selected {{/if}} >{{label}}</option>
                        {{/each}} --}}
                    </select>
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{game.name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" placeholder="{{game.image}}" value="{{game.image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{game.price}}">
                    <label>Weight:</label>
                    <input type="number" id="weight" name="weight" value="{{game.genre}}">
                    <label>Description:</label>
                    <textarea id="description" name="description">{{game.description}}
                    </textarea>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
    </main>

